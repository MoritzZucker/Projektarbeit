        <div class="row justify-content-center">
          <div class="col-xs-12 col-sm-8">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Vorname</th>
                  <th scope="col">Nachname</th>
                  <th scope="col">Kommentar</th>
                </tr>
              </thead>
              <tbody>
              <% comments.forEach((row) => { %>
                <tr>
                  <td><%= row.Vorname %></td>
                  <td><%= row.Nachname %></td>
                  <td><%= row.Kommentar %></td>
                </tr>
              <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-xs-12 col-sm-8">
            <form id="hft-shoutbox-form" method="post" action="/comment">
              <div class="form-group">
                <label for="hft-shoutbox-form-input-name">Vorname</label>
                <input type="text" name="Vorname" class="form-control" id="hft-shoutbox-form-input-name" placeholder="John">
              </div>
              <div class="form-group">
                <label for="hft-shoutbox-form-input-name">Nachname</label>
                <input type="text" name="Nachname" class="form-control" id="hft-shoutbox-form-input-name" placeholder="Doe">
              </div>
              <div class="form-group">
                <label for="hft-shoutbox-form-input-text">Kommentar</label>
                <textarea class="form-control" name="Kommentar" id="hft-shoutbox-form-textarea" rows="3"></textarea>
              </div>
              <button id="hft-shoutbox-form-submit" type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
     
